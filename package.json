{
    "name": "repo-root",
    "version": "1.0.0-beta.1",
    "description": "Finds the root directory of a repository",
    "type": "module",
    "main": "dist/index.cjs",
    "module": "dist/index.js",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "require": "./dist/index.cjs",
            "import": "./dist/index.js"
        }
    },
    "scripts": {
        "build": "tsdown src/index.ts --format=esm,cjs --dts",
        "test": "vitest",
        "lint": "eslint src --fix",
        "release": "bumpp"
    },
    "keywords": [
        "utility",
        "node"
    ],
    "author": "Ken Snyder <ken@ken.net>",
    "license": "MIT",
    "files": [
        "dist"
    ],
    "packageManager": "pnpm@10.10.0",
    "devDependencies": {
        "@antfu/eslint-config": "^4.13.2",
        "@type-challenges/utils": "^0.1.1",
        "@types/node": "^22.15.23",
        "bumpp": "^10.1.1",
        "eslint": "^9.27.0",
        "eslint-plugin-format": "^1.0.1",
        "husky": "^9.1.7",
        "jiti": "^2.4.2",
        "npm-run-all": "^4.1.5",
        "tsdown": "^0.12.4",
        "typescript": "^5.8.3",
        "vitest": "^3.1.4"
    },
    "peerDependencies": {
        "@yankeeinlondon/is-monorepo": ">=1.0.0-alpha.2",
        "@yankeeinlondon/kind-error": "^1.3.0",
        "@yankeeinlondon/package-json": ">=1.0.0-alpha.2",
        "inferred-types": ">=0.55.23"
    }
}
